@{
    ViewBag.Title = "Login";
    Layout = null;  // Use a layout if needed, such as Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="display: flex; justify-content: center; align-items: center;">
                        <div style="display: flex; align-items: center;">
                            <img src="~/images/ALQUINET.png" alt="Logo" style="width: auto; height: 70px; filter: invert(1);">
                            <img src="~/images/ALQUINET4.png" alt="Logo-nombre" style="width: auto; height: 70px; margin-left: 10px; filter: invert(1);">
                        </div>
                    </a>

                    <div class="card-header text-center">
                        <h2>Login</h2>
                    </div>
                    <div class="card-body">
                        @* Display error messages if any exist *@
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
                        }

                        @* Start the login form *@
                        @using (Html.BeginForm("Index", "Acceso", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken() @* Protection against CSRF *@

                            <div class="form-group mb-3">
                                @Html.Label("correo", "Correo Electrónico", new { @class = "form-label" })
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    @Html.TextBox("correo", null, new { @class = "form-control", placeholder = "Ingresar correo", type = "email", required = "required" })
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                @Html.Label("clave", "Contraseña", new { @class = "form-label" })
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    @Html.Password("clave",null, new { @class = "form-control", placeholder = "Ingresar contraseña", required = "required" })
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Scripts for form validation, jQuery, Bootstrap *@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
</body>
</html>
