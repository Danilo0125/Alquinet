
@{
    ViewBag.Title = "Agentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Agentes</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i>
        Lista de Agentes
    </div>
    <div class="card-body">
        <div class="row m-2">
            <div class="col-sm-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="table table-bordered" style="width: 90%">
            <caption>
                <i class="fas fa-users me-1"></i>
                Lista de Agentes
            </caption>
            <thead class="table-dark">
                <tr>
                    <th>Cod</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Telefono</th>
                    <th>Ci</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Cod</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Telefono</th>
                    <th>Ci</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="LblTipoCrud">Agente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row m-2">
                    <input type="hidden" id="TxtCod" />
                    <div class="col-sm-6">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="TxtNombre" placeholder="Nombre" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="TxtApellido" placeholder="Apellido" autocomplete="off" />
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" id="TxtEmail" placeholder="name@example.com" autocomplete="off" />
                    </div>
                    <div class="col-sm-7">
                        <label class="form-label">Telefono</label>
                        <input type="text" class="form-control" id="TxtTelefono" placeholder="Telefono" autocomplete="off" />
                    </div>
                    <div class="col-sm-5">
                        <label class="form-label">Ci</label>
                        <input type="text" class="form-control" id="TxtCi" placeholder="Ci" autocomplete="off" />
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="form-label" for="password">Contraseña</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="TxtContra" placeholder="Introduce tu contraseña" autocomplete="off">
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Comfimar Contraseña</label>
                        <input type="password" class="form-control" id="Txt2Contra" placeholder="Confirmar tu Contraseña" autocomplete="off" />
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="BtnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#BtnGuardar').on('click', function() {
            let errorMessage = null;
            const password = $('#TxtContra').val().trim();
            const confirmPassword = $('#Txt2Contra').val().trim();
            if (password && confirmPassword && password !== confirmPassword) { 
                    isValid = false;
                    errorMessage += 'Las contraseñas no coinciden.\n';
            }
            if (errorMessage != null) {
                $("#mensajeError").text(errorMessage);
                $("#mensajeError").show();
            } else {
                var Agente = {
                    Cod: $("#TxtCod").val(),
                    Apellido: $("#TxtApellido").val(),
                    Ci: $("#TxtCi").val(),
                    Contraseña: $("#TxtContra").val(),
                    Correo: $("#TxtEmail").val(),
                    Nombre: $("#TxtNombre").val(),
                    Telefono: $("#TxtTelefono").val()
                }
                jQuery.ajax({
                    url: '@Url.Action("GuardarAgentes", "Home")',
                    type: "POST",
                    data: JSON.stringify({ Agente: Agente}),
                    dataType: "json",
                    contentType: "application/json; charset-utf-8",
                    success: function (data) {
                        $(".modal-body").LoadingOverlay("hide");
                        if (Agente.Cod == 0) {
                            if (data.resultado > 0) {
                                Agente.Cod = data.resultado;
                                tablita.row.add(Agente).draw(false);
                                $("#staticBackdrop").modal("hide");
                            }
                            else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        } else {
                            if (data.resultado) {
                                tablita.row(filaSelecionada).data(Agente).draw(false);
                                filaSelecionada = null;
                                $("#staticBackdrop").modal("hide");
                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }

                        }
                    },
                    error: function (error) {
                        $(".modal-body").LoadingOverlay("hide");
                        $("#mensajeError").text("Error ajax");
                        $("#mensajeError").show();
                    },
                    beforeSend: function () {
                        $(".modal-body").LoadingOverlay("show", { imageResizeFactor: 2, text: "Cargando...", size: 14 })
                    }
                });
            }
        });
        document.getElementById('togglePassword').addEventListener('click', function (e) {
            const passwordInput = document.getElementById('TxtContra');
            const toggleIcon = document.getElementById('toggleIcon');

            // Toggle the type attribute
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Toggle the icon
            toggleIcon.classList.toggle('fa-eye');
            toggleIcon.classList.toggle('fa-eye-slash');
        });
        var filaSelecionada;
        var tablita = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListaAgentes", "Home")',
                type: "GET",
                dataType: "json",
                dataSrc: "data" // Apunta a la propiedad correcta en tu JSON
            },
            "columns": [
                { "data": "Cod" },
                { "data": "Nombre" },
                { "data": "Apellido" },
                { "data": "Telefono" },
                { "data": "Ci" },
                { "data": "Correo" },
                { "data": "Contraseña" },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,//no se utiliza el filtro de busque es esta columna
                    "width": "90px"
                }
        ],
        "language": {
            "url":"//cdn.datatables.net/plug-ins/2.0.8/i18n/es-MX.json"
            }

        });

        function abrirModal(json) {
            $("#LblTipoCrud").html("Crear <strong>Agente</strong>")
            $("#TxtCod").val(0)
            $("#TxtNombre").val("")
            $("#TxtApellido").val("")
            $("#TxtEmail").val("")
            $("#TxtTelefono").val("")
            $("#TxtCi").val("")
            $("#TxtContra").val("")
            $("#Txt2Contra").val("")
            const passwordInput = document.getElementById('TxtContra');
            const toggleIcon = document.getElementById('toggleIcon');

            // Asegura que el campo de contraseña esté oculto
            passwordInput.setAttribute('type', 'password');

            // Asegura que el icono sea el de ojo abierto (fa-eye)
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');

            $("#mensajeError").hide();

            if (json != null) {
                $("#LblTipoCrud").html("Crear <strong>Agente</strong>")
                $("#TxtCod").val(json.Cod)
                $("#TxtNombre").val(json.Nombre)
                $("#TxtApellido").val(json.Apellido)
                $("#TxtEmail").val(json.Correo)
                $("#TxtTelefono").val(json.Telefono)
                $("#TxtCi").val(json.Ci)
                $("#TxtContra").val(json.Contraseña)
                $("#Txt2Contra").val(json.Contraseña)
            }
            $("#staticBackdrop").modal("show");
        }

        $("#tabla tbody").on("click", '.btn-editar', function(){

            filaSelecionada = $(this).closest("tr");
            var data = tablita.row(filaSelecionada).data();
            console.log(data)
            abrirModal(data)
        })
        $("#tabla tbody").on("click", '.btn-eliminar', function () {

            var usuarioSelecionado = $(this).closest("tr");
            var data = tablita.row(usuarioSelecionado).data();
            debugger;
            swal({
                title: "Esta Seguro?",
                text: "¿Desea eliminar el usuario?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
            function () {
                jQuery.ajax({
                    url: '@Url.Action("EliminarAgente", "Home")',
                    type: "POST",
                    data: JSON.stringify({ cod: data.Cod }),
                    dataType: "json",
                    contentType: "application/json; charset-utf-8",
                    success: function (data) {
                        debugger;
                        if (data.resultado) {
                            tablita.row(usuarioSelecionado).remove().draw();
                        } else {
                            swal("No se pudo eliminar", data.mensaje,"error")
                        }
                    },
                    error: function (error) { },
                    BeforeUnloadEvent: function () { }
                });
            });
        })

    </script>


}

