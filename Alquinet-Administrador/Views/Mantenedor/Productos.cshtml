@{
    ViewBag.Title = "Propiedades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Propiedades</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fas fa-home me-1"></i>
        Lista de Propiedades
    </div>
    <div class="card-body">
        <div class="row m-2">
            <div class="col-sm-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="table table-bordered" style="width: 90%">
            <caption>
                <i class="fas fa-home me-1"></i>
                Lista de Propiedades
            </caption>
            <thead class="table-dark">
                <tr>
                    <th class="center">Cod</th>
                    <th>Titulo</th>
                    <th>Area</th>
                    <th>Precio</th>
                    <th>Disponibilidad</th>
                    <th>Tipo</th>
                    <th class="center">Dueño</th>
                    <th class="center">Direccion</th>
                    <th class="center">Agente</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="LblTipoCrud">Propiedad</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row m-1">
                    <input type="hidden" id="TxtCod" />
                    <div class="col-sm-6">
                        <label class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="TxtTitulo" placeholder="Titulo" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Area</label>
                        <input type="text" class="form-control" id="TxtArea" placeholder="Area" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Precio</label>
                        <input type="number" class="form-control" id="TxtPrecio" placeholder="Precio" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Tipo</label>
                        <select class="form-control" id="TxtTipo">
                            <option value="Casa">Casa</option>
                            <option value="Departamento">Departamento</option>
                        </select>
                    </div>
                    <div class="col-sm-12">
                        <label class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="TxtDescripcion" placeholder="Descripcion" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Disponibilidad</label>
                        <select class="form-control" id="TxtDisponibilidad">
                            <option value="Pendiente">Pendiente</option>
                            <option value="Aprobado">Aprobado</option>
                            <option value="Suspendido">Suspendido</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Codigo del Propietario</label>
                        <input type="number" class="form-control" id="TxtCodUser" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Codigo del Agente asignado</label>
                        <input class="form-control" id="TxtTCodAgente" type="number" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Codigo de Direccion</label>
                        <input class="form-control" id="CodDireccion" type="number" autocomplete="off" />
                    </div>
                    <div class="col-sm-12 center border">
                        <label class="form-label">
                            <strong>Direccion</strong>
                        </label>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Codigo postal</label>
                        <input class="form-control" id="TxtCodPostal" type="number" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Calle</label>
                        <input class="form-control" id="TxtCalle" type="text" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Barrio</label>
                        <input class="form-control" id="TxtBarrio" type="text" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Zona</label>
                        <select class="form-control" id="TxtZona">
                            <option value="Norte">Norte</option>
                            <option value="Sur">Sur</option>
                            <option value="Centro">Centro</option>
                            <option value="Este">Este</option>
                            <option value="Oeste">Oeste</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Longitud</label>
                        <input class="form-control" id="TxtLongitud" type="text" autocomplete="off" />
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label">Latitud</label>
                        <input class="form-control" id="TxtLatitud" type="text" autocomplete="off" />
                    </div>
                    <div class="col-sm-12" id="imagenesPropiedad">
                        <label class="form-label">Imagenes</label>
                        <div class="row" id="imageGallery"></div>
                    </div>
                </div>
                <div class="row m-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" style="display: none;">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="BtnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var tablita = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("Listar", "Propiedad")',
                type: "GET",
                dataType: "json",
                dataSrc: "data"
            },
            "columns": [
                { "data": "Cod" },
                { "data": "Titulo" },
                { "data": "Area" },
                { "data": "Precio" },
                { "data": "Disponibilidad" },
                { "data": "Tipo" },
                { "data": "Cod_usuario" },
                { "data": "Cod_direccion" },
                {
                    "data": "Cod_agente",
                    "render": function (data, type, row) {
                        return data ? data : 'Sin asignar';
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-ver" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver"><i class="fas fa-eye"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "50px"
                }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/2.0.8/i18n/es-MX.json"
            }
        });

        function abrirModal(json) {
            $("#LblTipoCrud").html("Crear <strong>Propiedad</strong>");
            // Reset the form fields
            $("#TxtCod").val(0);
            $("#TxtTitulo").val("");
            $("#TxtArea").val(0);
            $("#TxtPrecio").val("");
            $("#TxtTipo").val("Casa");
            $("#TxtDescripcion").val("");
            $("#TxtDisponibilidad").val("Pendiente");
            $("#TxtCodUser").val(0);
            $("#TxtTCodAgente").val(0);
            $("#CodDireccion").val(0);
            $("#TxtCodPostal").val(0);
            $("#TxtCalle").val("");
            $("#TxtBarrio").val("");
            $("#TxtZona").val("Norte");
            $("#TxtLongitud").val("");
            $("#TxtLatitud").val("");
            $("#imageGallery").html("");

            // Populate the modal with data if editing
            if (json != null) {
                $("#LblTipoCrud").html("Editar <strong>Propiedad</strong>");
                $("#TxtCod").val(json.Cod);
                $("#TxtTitulo").val(json.Titulo);
                $("#TxtArea").val(json.Area);
                $("#TxtPrecio").val(json.Precio);
                $("#TxtTipo").val(json.Tipo);
                $("#TxtDescripcion").val(json.Descripcion);
                $("#TxtDisponibilidad").val(json.Disponibilidad);
                $("#TxtCodUser").val(json.Cod_usuario);
                $("#TxtTCodAgente").val(json.Cod_agente);
                $("#CodDireccion").val(json.Cod_direccion);
                $("#TxtCodPostal").val(json.Direccion.Cod_pos);
                $("#TxtCalle").val(json.Direccion.Calle);
                $("#TxtBarrio").val(json.Direccion.Barrio);
                $("#TxtZona").val(json.Direccion.Zona);
                $("#TxtLongitud").val(json.Direccion.Longitud);
                $("#TxtLatitud").val(json.Direccion.Latitud);

                // Display images
                var imagenesHtml = "";
                json.Fotos.forEach(function (foto) {
                    imagenesHtml += `
                        <div class="col-sm-4 mb-3">
                            <img src="data:image/jpeg;base64,${foto.Base64}" class="img-fluid" alt="Imagen de Propiedad" />
                        </div>`;
                });
                $("#imageGallery").html(imagenesHtml);
            }

            $("#staticBackdrop").modal("show");
        }

        function cargarDetallesPropiedad(cod) {
            $.get('@Url.Action("ObtenerPropiedadConDetalles", "Propiedad")', { cod: cod }, function (response) {
                if (response.operacion_exitosa) {
                    var propiedad = response.datos;
                    abrirModal(propiedad);
                } else {
                    alert(response.mensaje);
                }
            });
        }

        $("#tabla tbody").on("click", '.btn-ver', function () {
            var data = tablita.row($(this).parents('tr')).data();
            cargarDetallesPropiedad(data.Cod);
        });

        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            var data = tablita.row($(this).parents('tr')).data();
            // Call the delete function or handle the deletion process here
        });

        $("#BtnGuardar").on("click", function () {
            var propiedad = {
                Cod: parseInt($("#TxtCod").val()), // El código debe ser enviado para editar
                Titulo: $("#TxtTitulo").val(), // Asegúrate de que no sea null
                Area: parseFloat($("#TxtArea").val()), // Asigna 0 si no es válido
                Tipo: $("#TxtTipo").val(), // Proveer un valor por defecto
                Disponibilidad: $("#TxtDisponibilidad").val(),
                Descripcion: $("#TxtDescripcion").val(),
                PrecioTexto: $("#TxtPrecio").val(),
                Cod_usuario: parseInt($("#TxtCodUser").val()), // Asegúrate de que sea un entero
                Cod_agente: parseInt($("#TxtTCodAgente").val()), // Asegúrate de que sea un entero
                Cod_direccion: parseInt($("#CodDireccion").val()) // Asegúrate de que sea un entero
            };

            // Log para depurar el objeto propiedad
            console.log("Objeto propiedad a enviar:", propiedad);

            // Hacer una llamada AJAX para editar la propiedad
            $.ajax({
                url: '@Url.Action("Editar", "Propiedad")',
                type: 'POST',
                dataType: "json",
                contentType: 'application/json; charset-utf-8",',
                data: JSON.stringify(propiedad),
                success: function (response) {
                    if (response.operacion_exitosa) {
                        alert(response.mensaje);
                        tablita.ajax.reload(); // Recarga la tabla
                        $("#staticBackdrop").modal("hide"); // Cierra el modal
                    } else {
                        alert(response.mensaje);
                    }
                },
                error: function (error) {
                    console.error("Error en la llamada AJAX:", error); // Muestra el error en la consola
                    alert("Ocurrió un error al editar la propiedad.");
                }
            });
        });

    </script>
}
